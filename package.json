    "setup:maestro": "curl -Ls 'https://get.maestro.mobile.dev' | bash",
    "postinstall": "echo '\\n[app-publisher-mcp] Run `npm run setup:maestro` to install Maestro CLI for UI testing (requires Java 17+)\\n'",
